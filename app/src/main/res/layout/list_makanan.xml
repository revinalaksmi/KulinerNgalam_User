<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg4">

        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:hint="Nama Makanan"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgMakanan"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_below="@+id/tvNama"
            android:layout_marginTop="10dp"
            android:src="@drawable/a" />

        <TextView
            android:id="@+id/tvIdMakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgMakanan"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgMakanan"
            android:hint="Id Makanan"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tvHargaContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvIdMakanan"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/imgMakanan"
            android:hint="Harga Makanan"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHargaContent"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/imgMakanan"
            android:hint="Harga :"
            android:textSize="18sp"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/tvAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHarga"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/imgMakanan"
            android:hint="Alamat :"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tvAlamatContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAlamat"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imgMakanan"
            android:hint="Malang"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tvReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAlamatContent"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/imgMakanan"
            android:hint="Review :"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tvReviewtContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvReview"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/imgMakanan"
            android:hint="Enak"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"/>
</LinearLayout>